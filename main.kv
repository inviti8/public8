#:kivy 1.11.1

<TabLayout>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    rows: 3

    TabbedPanelItem:
        text: 'PUBLICATE'
        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Type'
                        size_hint: 0.15, 0.5
                        color: 0, .5, .65, 1
                        
                    Spinner:
                        text: "Journalism"
                        values: "Journalism", "Literary", "Graphic"
                        size_hint: 0.5, 0.7
                        size: 30, 44
                        color:  0, .7, .8, 1


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Title"
                        size_hint: 0.15, 0.5
                        color: 0, .5, .65, 1

                    TextInput:
                        size_hint: 0.7, 0.7
                        background_color: 0, .5, .65, 1


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Author"
                        size_hint: 0.15, 0.5
                        color: 0, .5, .65, 1

                    TextInput:
                        size_hint: 0.7, 0.7
                        background_color: 0, .5, .65, 1


                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    size_hint: 1, 0.65

                    Label:
                        text: "References"
                        size_hint: 0.15, 0.1
                        color: 0, .5, .65, 1

                    TextInput:
                        text: "Text Input, start typing here\nmultiline\nsupport"
                        size: 50, 44
                        background_color: 0, .5, .65, 1
                        

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Content Type'
                        size_hint: 0.35, 0.5
                        color: 0, .5, .65, 1
                    Spinner:
                        text: "Docx"
                        values: "Docx", "Json"
                        size_hint: 0.6, 0.7
                        size: 30, 44
                        color:  0, .7, .8, 1


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Content Path"
                        size_hint: 0.35, 0.5
                        color: 0, .5, .65, 1

                    TextInput:
                        size_hint: 0.6, 0.7
                        background_color: 0, .5, .65, 1

                    Button:
                        text: "LOAD"
                        size_hint: 0.2, 0.7
                        color:  0, .7, .8, 1

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Theme'
                        size_hint: 0.15, 0.5
                        color:  0, .5, .65, 1
                    Spinner:
                        text: "Dark"
                        values: "Dark", "Light"
                        size_hint: 0.5, 0.7
                        size: 30, 44
                        color:  0, .7, .8, 1
                    Button:
                        text: "LOAD"
                        size_hint: 0.2, 0.7
                        color: 0, .7, .8, 1

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.25

                    AppButton:
                        text: "TEST"
                        name: "TEST_APP"
                        size_hint: 0.2, 0.7

                    AppButton:
                        text: "DEPLOY"
                        name: "DEPLOY_APP"
                        size_hint: 0.2, 0.7

                
                        
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    size_hint: 1, 0.4

                    TextInput:
                        text: "Console"
                        background_color: .1, .2, .3, 1
                        color:  0, .7, .8, 1
                        size: 50, 44
            
                    
    TabbedPanelItem:
        text: 'SIGNATURE'
        BoxLayout:
            orientation: 'vertical'
            padding: 20

            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                size_hint: 1, 0.35

                Label:
                    text: 'Digital Signature'
                    size_hint: 0.2, 0.5
                    color:  0, .5, .65, 1
                Spinner:
                    text: "OFF"
                    values: "OFF", "ON"
                    size_hint: 0.6, 0.3
                    size: 40, 50
                    color: 0, .7, .8, 1


            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 10

                Label:
                    text: "Keys"
                    size_hint: 1, 0.1
                    color:  0, .5, .65, 1

                Button:
                    text: "GENERATE"
                    size_hint: 1, 0.07
                    color: 0, .7, .8, 1

                Button:
                    text: "LOAD"
                    size_hint: 1, 0.07
                    color: 0, .7, .8, 1

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15
                    Label:
                        text: "Key Path:"
                        size_hint: 0.15, 0.5
                        color:  0, .5, .65, 1

                    TextInput:
                        size_hint: 0.6, 0.7
                        background_color: 0, .5, .65, 1


    TabbedPanelItem:
        text: 'WALLET'
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                size_hint: 1, 0.35

                Label:
                    text: "Key Path"
                    size_hint: 0.3, 0.2
                    color:  0, .5, .65, 1

                TextInput:
                    size_hint: 0.7, 0.2
                    background_color: 0, .5, .65, 1

            Button:
                text: "LOAD KEY FILE"
                size_hint: 1, 0.1
                color: 0, .7, .8, 1

            Button:
                text: "CREATE KEY FILE"
                size_hint: 1, 0.1
                color: 0, .7, .8, 1

            Button:
                text: "FORGET KEY"
                size_hint: 1, 0.1
                color: 0, .7, .8, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 20
                size_hint: 1, 0.35

                Label:
                    text: " "
                    size_hint: 1, 0.5