#:kivy 1.11.1

#Shared attributes
<FileSelector>:
    BoxLayout:
        id: file_selector
        Button
            text: "open"
            on_release: file_selector.open(filechooser.path, filechooser.selection)
        FileChooserListView:
            id: filechooser
            on_selection: file_selector.selected(filechooser.selection)

<Popup>:
    color:  0, .7, .8, 1

<AppButton>:
    color:  0, .7, .8, 1

<AppSpinner>:
    size: 30, 44
    color:  0, .7, .8, 1
    on_text: self.on_spinner_change()

<AppTextInput>:
    background_color: 0, .5, .65, 1
    on_text: self.on_text_input_change()

<ConsoleTextInput>:
    background_color: 0, 0, 0, 1
    foreground_color: 0, .75, .85, 1
    readonly: True
    on_text: self.on_text_input_change()

<Label>:
    color: 0, .75, .85, 1


<TabLayout>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    rows: 3
    

    TabbedPanelItem:
        text: 'PUBLISH'
        GridLayout:
            cols: 2

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Type'
                        size_hint: 0.15, 0.5
                        
                    AppSpinner:
                        id: type_spinner
                        name: "TYPE_SPINNER"
                        text: "Journalism"
                        values: "Journalism", "Literary", "Graphic"
                        size_hint: 0.5, 0.7


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Title"
                        size_hint: 0.15, 0.5

                    AppTextInput:
                        id: title_text_input
                        name: "TITLE_TEXT_INPUT"
                        size_hint: 0.7, 0.7
                        background_color: 0, .5, .65, 1
                        multiline: False


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Author"
                        size_hint: 0.15, 0.5

                    AppTextInput:
                        id: author_text_input
                        name: "AUTHOR_TEXT_INPUT"
                        size_hint: 0.7, 0.7


                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    size_hint: 1, 0.65

                    Label:
                        text: "References"
                        size_hint: 0.15, 0.1

                    AppTextInput:
                        id: references_text_input
                        name: "REFERENCES_TEXT_INPUT"
                        text: "REFERENCES:"
                        size: 50, 44
                        

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Content Type'
                        size_hint: 0.35, 0.5

                    AppSpinner:
                        id: content_type_spinner
                        name: "CONTENT_TYPE_SPINNER"
                        text: "Docx"
                        values: "Docx", "Json"
                        size_hint: 0.6, 0.7
                        size: 30, 44


                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: "Content Path"
                        size_hint: 0.35, 0.5

                    AppTextInput:
                        id: content_path_text_input
                        name: "CONTENT_PATH_TEXT_INPUT"
                        size_hint: 0.7, 0.7
                        size: 50, 44

                    AppButton:
                        id: content_path_load_button
                        name: "CONTENT_PATH_LOAD_BUTTON"
                        text: "LOAD"
                        size_hint: 0.2, 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Theme'
                        size_hint: 0.15, 0.5

                    AppSpinner:
                        id: theme_spinner
                        name: "THEME_SPINNER"
                        text: "Dark"
                        values: "Dark", "Light"
                        size_hint: 0.5, 0.7
                        size: 30, 44
                        color:  0, .7, .8, 1

                    AppButton:
                        id: theme_load_button
                        name: "THEME_LOAD_BUTTON"
                        text: "LOAD"
                        size_hint: 0.2, 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.15

                    Label:
                        text: 'Template'
                        size_hint: 0.15, 0.5
                        
                    AppSpinner:
                        id: template_spinner
                        name: "TEMPLATE_SPINNER"
                        text: "splitter_carousel"
                        values: "splitter_carousel", "None"
                        size_hint: 0.5, 0.7

                BoxLayout:
                    orientation: 'horizontal'
                    padding: 20
                    size_hint: 1, 0.25

                    AppButton:
                        id: test_app_button
                        name: "TEST_APP_BUTTON"
                        text: "TEST"
                        size_hint: 0.2, 0.7

                    AppButton:
                        id: deploy_app_button
                        name: "DEPLOY_APP_BUTTON"
                        text: "DEPLOY"
                        size_hint: 0.2, 0.7
                
                        
                BoxLayout:
                    orientation: 'vertical'
                    padding: 20
                    size_hint: 1, 0.2

                    ConsoleTextInput:
                        id: console_text_input
                        name: "CONSOLE_TEXT_INPUT"
                        text: "Console"
                        size_hint: 1, 0.2
                        size: 50, 20
            

    TabbedPanelItem:
        text: 'WALLET'
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            BoxLayout:
                orientation: 'horizontal'
                padding: 20
                size_hint: 1, 0.35

                Label:
                    text: "Key Path"
                    size_hint: 0.3, 0.2

                AppTextInput:
                    id: wallet_key_text_input
                    name: "WALLET_KEY_TEXT_INPUT"
                    size_hint: 0.7, 0.2

                AppButton:
                    id: load_wallet_key_button
                    name: "LOAD_WALLET_KEY_BUTTON"
                    text: "LOAD KEY FILE"
                    size_hint: 0.2, 0.2

            AppButton:
                id: create_wallet_key_button
                name: "CREATE_WALLET_KEY_BUTTON"
                text: "CREATE KEY FILE"
                size_hint: 1, 0.1

            AppButton:
                id: forget_wallet_key_button
                name: "FORGET_WALLET_KEY_BUTTON"
                text: "FORGET KEY"
                size_hint: 1, 0.1

            BoxLayout:
                orientation: 'vertical'
                padding: 20
                size_hint: 1, 0.35

                Label:
                    text: " "
                    size_hint: 1, 0.5